{
    "name": "hot-hands",
    "version": "0.1.0",
    "description": "Hot Hands Game",
    "scripts": {
        "start": "npm run server:dev",
        "webpack:dev": "webpack --config webpack/webpack.dev.config.js --progress --colors",
        "webpack:dist": "webpack --config webpack/webpack.dist.config.js --progress --colors",
        "build:dev": "echo-cli 'Building DEV ...' && npm run webpack:dev && echo-cli 'Build Complete ✔'",
        "build:dist": "echo-cli 'Building DIST ...' && npm run webpack:dist && echo-cli 'Build Complete ✔'",
        "server:dev": "webpack-dev-server --config webpack/webpack.dev.config.js --host 0.0.0.0",
        "server:dist": "webpack-dev-server --config webpack/webpack.dist.config.js --host 0.0.0.0",
        "checkDepsVersions": "npm-check --skip-unused -u",
        "test": "jest --coverage",
        "lint": "npm run lint:ts",
        "lint:ts": "tslint src/**/*.ts{,x}",
        "postinstall": "npm run build:dist"
    },
    "author": "Ali Soleimani <alisol911@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "classnames": "2.2.6",
        "lodash": "4.17.11",
        "react": "16.8.6",
        "react-dom": "16.8.6",
        "react-router": "5.0.0",
        "react-scripts": "3.0.1",
        "warning": "4.0.3",
        "yargs": "13.2.4"
    },
    "devDependencies": {
        "@types/assertion-error": "1.1.0",
        "@types/classnames": "2.2.8",
        "@types/history": "4.7.2",
        "@types/jest": "24.0.13",
        "@types/lodash": "4.14.133",
        "@types/node": "12.0.4",
        "@types/react": "16.8.19",
        "@types/webpack": "4.4.32",
        "awesome-typescript-loader": "5.2.1",
        "basscss": "8.1.0",
        "basscss-addons": "1.0.0",
        "basscss-basic": "1.0.0",
        "cross-env": "5.2.0",
        "css-loader": "2.1.1",
        "devtron": "1.4.0",
        "echo-cli": "1.0.8",
        "enzyme": "3.9.0",
        "eslint": "5.16.0",
        "eslint-plugin-react": "7.13.0",
        "extract-text-webpack-plugin": "3.0.2",
        "file-loader": "3.0.1",
        "history": "4.9.0",
        "html-loader": "0.5.5",
        "html-webpack-plugin": "3.2.0",
        "jest": "24.8.0",
        "jest-cli": "24.8.0",
        "jest-enzyme": "7.0.2",
        "optimize-css-assets-webpack-plugin": "5.0.1",
        "postcss-cssnext": "3.1.0",
        "postcss-import": "12.0.1",
        "postcss-loader": "3.0.0",
        "react-router-dom": "5.0.0",
        "react-test-renderer": "16.8.6",
        "reselect": "4.0.0",
        "serve-static": "1.14.1",
        "stats-webpack-plugin": "0.7.0",
        "style-loader": "0.23.1",
        "ts-jest": "24.0.2",
        "ts-loader": "6.0.2",
        "tslint": "5.17.0",
        "typescript": "3.5.1",
        "typescript-require": "0.2.10",
        "webpack": "4.32.2",
        "webpack-cli": "3.3.2",
        "webpack-dev-server": "3.5.0",
        "webpack-shell-plugin": "0.5.0"
    },
    "resolutions": {
        "@types/tapable": "1.0.0"
    },
    "jest": {
        "moduleNameMapper": {
            "^image![a-zA-Z0-9$_-]+$": "GlobalImageStub",
            "^[./a-zA-Z0-9$_-]+\\.png$": "RelativeImageStub"
        },
        "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
        "transform": {
            "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
            "^.+\\.(css|less|scss|styl)$": "<rootDir>/src/framework/transforms/css.js",
            "^.+\\.(svg)$": "<rootDir>/src/framework/transforms/img.js"
        },
        "testRegex": "(/(__tests__|__spec__)/.*|\\.(test|spec))\\.(ts|tsx)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ]
    }
}
